{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Backend (Django)",
            "type": "shell",
            // 核心修改：动态获取当前 VS Code 选中的 Python 解释器路径
            "command": "${command:python.interpreterPath}",
            // 将命令参数分开，防止路径带空格导致命令解析错误
            "args": [
                "manage.py",
                "runserver"
            ],
            "options": {
                "cwd": "${workspaceFolder}/meeting_system"
            },
            "presentation": {
                "reveal": "always",
                "group": "servers"
            },
            "problemMatcher": []
        },
        {
            "label": "Start Frontend (npm)",
            "type": "shell",
            "command": "npm run dev",
            "options": {
                "cwd": "${workspaceFolder}/frontend/meeting-frontend"
            },
            "presentation": {
                "reveal": "always",
                "group": "servers"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Full Stack Project",
            "dependsOn": [
                "Start Backend (Django)",
                "Start Frontend (npm)"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}